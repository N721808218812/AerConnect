@model AerConnect.Models.View_Model.SearchPassengerViewModel

<div id="searchResults" class="col-md-8">
  
        @if (!Model.Putniks.Any())
        {
            <h2>Ne postoji putnik sa unetim podacima.</h2>
        }
        else
        {
            <div class="lista">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th align="center">Letovi koje ste pretrazili</th>
                           
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var putnici in Model.Putniks)
                        {
                            <tr>
                                
                                <td align="center">@Html.ActionLink(putnici.BrojPasosa + " | " + putnici.Ime + " | " + putnici.Prezime + " | " + putnici.BrojTelefona + " | " + putnici.Email,"SviLetovi","Flight")</td>
                            </tr>                        

                        }
                    </tbody>
                </table>
            </div>
        }
    
</div>
<link href="~/Content/Site.css" rel="stylesheet" />
